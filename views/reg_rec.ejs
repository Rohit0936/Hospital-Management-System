<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Doctor - Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/reg_doc.css" />
  <script type="text/javascript" src="addimag.js"></script>
  <script type="text/javascript" src="/validate.js"></script>
</head>
<body>
  <%- include('admin_dash.ejs') %>

  <!-- Content Wrapper -->
   <form action="/regrecep" method="post" enctype="multipart/form-data" onsubmit=" return submitfrom()">
    <div class="page-wrapper">
      <div class="container doctor-container">
        
        <!--  Doctor Form -->
        <div class="form-container">
          <h3 class="mb-3 fw-bold text-center">Add Receptionist</h3>
          
          <div class="mb-2"><label>Name:</label>&nbsp;&nbsp;<label class="info" id="name"></label>
            <input type="text" name="name" id="setname" value="" placeholder="Enter Receptionist name" onkeyup="namevalid(this.value)" required>
          </div>
          <div class="mb-2"><label>Email</label>&nbsp;&nbsp;<label class="info" id="email"></label>
            <input type="email" name="email" placeholder="Enter email" onclick="setname1()" onkeyup="emailvalid(this.value)" required>
          </div>
            
          <div class="mb-2"><label>Contact</label>&nbsp;&nbsp;<label class="info" id="con"></label>
            <input type="number" name="contact" placeholder="Contact number" onkeyup="cont(this.value)" required >
          </div>
           
          <div class="mb-2"><label>Password</label>
            <input type="password" name="password" id="pass" placeholder="Password" required>
          </div>
          <div class="mb-2"><label>Confirm Password</label>&nbsp;&nbsp;<label class="info" id="comfirmpass"></label>
            <input type="password" id="conpass" placeholder="Confirm password" onclick="compare(this.value)" onkeyup="compare(this.value)" required>
          </div>
            <div class="text-center">
              <button type="submit" name="b">Add Receptionist</button>
            </div>
            <label for="" style="color: red; margin-left: 80px; margin-top: 20px;"><%=msg%></label>
        </div>
  
        <!-- ðŸ“¸ Image Upload -->
        
        <div class="image-container">
          <div class="img" id="image">
            
          </div>
          <h5 class="mb-2">Upload Reception Image</h5>
          <div class="image-upload">
            <i class="fas fa-cloud-upload-alt"></i>
            <p>Upload Profile Image</p>
            <label for="doctor-image" class="image-upload-label">Choose File</label>
            <input type="file" id="doctor-image" style="border: none;" name="imag" accept="image/*" onchange="addimg(event)" required>
          </div>
        </div>
      </div>
    </div>
   </form>
  
</body>
</html>

