<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

  <style>
   body {
  font-family: 'Segoe UI', sans-serif;
  background: linear-gradient(-45deg, #43cea2, #185a9d, #bbadaf, #2193b0);
  background-size: 400% 400%;
  animation: gradientShift 20s ease infinite;
  min-height: 100vh;
  margin: 0;
  position: relative;
}

/* Animated gradient */
@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  25% { background-position: 50% 50%; }
  50% { background-position: 100% 50%; }
  75% { background-position: 50% 50%; }
  100% { background-position: 0% 50%; }
}

/* Optional: glass effect layer */
body::before {
  content: "";
  position: fixed;
  inset: 0;
  background: rgba(255, 255, 255, 0.05); /* Light glass tint */
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  z-index: -1;
}


    .page-wrapper {
      margin-left: 250px;
      padding: 30px;
      transition: margin-left 0.3s ease;
    }

    @media (max-width: 768px) {
      .page-wrapper {
        margin-left: 0;
      }
    }

    .admin-card {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      transition: transform 0.4s ease, box-shadow 0.4s ease;
      position: relative;
      overflow: hidden;
      backdrop-filter: blur(12px);
    }

    .admin-card:hover {
      transform: translateY(-10px) scale(1.03);
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
    }

    .admin-card .card-content {
      padding: 30px;
      position: relative;
      z-index: 1;
    }

    .header-container {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 15px;
    }

    .header-logo {
      font-size: 2.5rem;
      color: #f1c40f;
    }

    .text-dark {
      color: #1e272e !important;
      font-weight: 700;
      letter-spacing: 0.5px;
    }

    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 25px;
      margin-top: 40px;
    }

    .feature-card {
      background: rgba(255, 255, 255, 0.15);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 20px;
      padding: 25px;
      text-align: center;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      transition: transform 0.4s ease, box-shadow 0.4s ease;
      position: relative;
      backdrop-filter: blur(8px);
    }

    .feature-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    }

    .feature-card i {
      font-size: 3rem;
      margin-bottom: 15px;
    }

    .feature-card h4 {
      color: #2d3436;
      font-weight: 600;
      font-size: 1.3rem;
      margin-bottom: 12px;
    }

    .feature-card p {
      color: #f5f6fa;
    }

    .feature-card:nth-child(1) i { color: #e67e22; }
    .feature-card:nth-child(2) i { color: #9b59b6; }
    .feature-card:nth-child(3) i { color: #1abc9c; }

    .gradient-divider {
      height: 4px;
      width: 100px;
      background: linear-gradient(90deg, #f1c40f, #f39c12, #e67e22);
      background-size: 200% 100%;
      border-radius: 3px;
      animation: gradientShift 4s ease-in-out infinite;
    }

    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      100% { background-position: 100% 50%; }
    }
  </style>
</head>
<body>

  <!-- Include reusable sidebar -->
<%-include('admin_dash.ejs')%>
  <div class="page-wrapper">
    <div class="container py-5">
      <!-- Welcome Message -->
      <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
          <div class="card admin-card text-center">
            <div class="card-content">
              <div class="header-container mb-4">
                <i class="fas fa-user-shield header-logo"></i>
                <h2 class="text-dark mb-0">Welcome Admin</h2>
              </div>
              <div class="gradient-divider mx-auto mb-4"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Admin Features -->
      <div class="card-grid mt-5">
        <div class="feature-card">
          <i class="fas fa-user-md"></i>
          <h4>Manage Staff</h4>
          <p>Monitor doctors, nurses, and reception activities.</p>
        </div>
        <div class="feature-card">
          <i class="fas fa-bed"></i>
          <h4>Room Allocation</h4>
          <p>Control and manage patient room assignments.</p>
        </div>
        <div class="feature-card">
          <i class="fas fa-chart-line"></i>
          <h4>Reports & Logs</h4>
          <p>View hospital performance and activity logs.</p>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
