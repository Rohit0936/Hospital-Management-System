body {
     background-image: url("formbg.jpeg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Montserrat', sans-serif;
    height: 100vh;
    margin: 0;
    }

.page-wrapper {
  padding: 20px;
}

.navbar-custom {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 60px;
  background-color: #0277bd;
  color: white;
  z-index: 1100;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.navbar-custom .navbar-brand,
.navbar-custom .navbar-text,
.navbar-custom .nav-link {
  color: #ffffff !important;
  font-weight: bold;
}

.navbar-toggler {
  background-color: #01579b;
  border: none;
  color: white;
}

.info{
  color: rgb(239, 94, 94);
}

.doctor-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
  max-width: 1000px;
}

.form-container,
.image-container {
  flex: 1 1 300px;
  padding: 20px;
  border-radius: 8px;
  min-width:400px;
}

.form-container {
  background: #fff;
  max-width: 420px;
  box-shadow: 0 0 12px rgba(0,0,0,0.1);
}

.image-container {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: white;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  max-width: 420px;
}

.image-upload {
  background-color: rgba(255, 255, 255, 0.15);
  border: 2px dashed #fff;
  padding: 20px;
  border-radius: 8px;
  max-width: 240px;
}

.image-upload i {
  font-size: 30px;
  margin-bottom: 10px;
}

.image-upload-label {
  cursor: pointer;
  color: #ffffff;
  text-decoration: underline;
  font-size: 12px;
}

input[type="text"],
input[type="email"],
input[type="number"],
input[type="password"] {
  width: 100%;
  padding: 8px;
  margin-bottom: 10px;
  border: none;
  border-radius: 6px;
  background: #e9ecef;
}

button {
  background-color: #e74c3c;
  border: none;
  padding: 10px 24px;
  color: white;
  border-radius: 20px;
  font-size: 14px;
  cursor: pointer;
}

button:hover {
  background-color: #c0392b;
}

.img img{
  width: 120px;
  height: 120px;
}

img[alt]{
  border: none;
}

@media (max-width: 768px) {
  body {
    align-items: flex-start;
    padding-top: 80px;
  }
  .doctor-container {
    flex-direction: column;
    padding:0 auto;
  }
}
</style>
</head>
<body>
<form action="/regadmin" method="post" enctype="multipart/form-data" onsubmit="return submitfrom()">
  <div class="page-wrapper">
    <div class="container doctor-container">
      <div class="form-container">
        <h3 class="mb-4 fw-bold text-center">Admin Registration</h3>
        <div class="mb-2"><label>Name:</label>&nbsp;&nbsp;<label class="info" id="name"></label>
          <input type="text" name="name" id="setname" placeholder="Enter name" onkeyup="namevalid(this.value)" required>
        </div>
        <div class="mb-2"><label>Email</label>&nbsp;&nbsp;<label class="info" id="email"></label>
          <input type="email" name="email" placeholder="Enter email" onclick="setname1()" onkeyup="emailvalid(this.value)" required>
        </div>
        <div class="mb-2"><label>Contact</label>&nbsp;&nbsp;<label class="info" id="con"></label>
          <input type="number" name="contact" placeholder="Contact number" onkeyup="cont(this.value)" required>
        </div>
        <div class="mb-2"><label>Password</label>
          <input type="password" name="password" id="pass" placeholder="Password" required>
        </div>
        <div class="mb-2"><label>Confirm Password</label>&nbsp;&nbsp;<label class="info" id="comfirmpass"></label>
          <input type="password" id="conpass" placeholder="Confirm password" onclick="compare(this.value)" onkeyup="compare(this.value)" required>
        </div>
        <div class="text-center">
          <button type="submit" name="b">Sign Up</button>
        </div>
        <label style="color: red; margin-left: 80px; margin-top: 20px;"><%=msg%></label>
      </div>

      <div class="image-container">
        <div class="img" id="image"></div>
        <h5 class="mb-2">Upload Image</h5>
        <div class="image-upload">
          <i class="fas fa-cloud-upload-alt"></i>
          <p>Upload Profile Image</p>
          <label for="doctor-image" class="image-upload-label">Choose File</label>
          <input type="file" id="doctor-image" name="imag" accept="image/*" onchange="addimg(event)" required>
        </div>
      </div>
    </div>
  </div>
</form>
</body>
</html>