<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Show Doctors</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/sidebar.css" />
  <link rel="stylesheet" href="/show_doc.css" />
  <script type="text/javascript" src="searchdoc.js"></script>
  <style>
    .page-wrapper {
      margin-left: 250px; /* Same as sidebar width */
      padding: 20px;
      

    }

    @media (max-width: 768px) {
      .page-wrapper {
        margin-left: 0;
      }
    }

    h1{
     
      width:100%; 
      text-align: center;
    }

    .search{
      display: inline-flex;
      width: 100%;
    }
  </style>
</head>
<body>

  <!-- Include admin sidebar and navbar -->
  <%- include('admin_dash.ejs') %>
  
  <!-- Page Wrapper Starts after admin dashboard's .main-content open tag -->
  <div class="page-wrapper">
    <div class="container py-4">
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
         
            <input class="form-control me-2" type="search" placeholder="Search" onkeyup="showrecep(this.value)">
          
        </div>
      </nav>
 <br>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4" id="main">
        
        <!-- Sample doctor card -->
        <%
        if(typeof(result)=="undefined" || result.length==0)
        {
     %>
        <h1 style="width: 100%; text-align: center;">Receptionist Not Avaiable ðŸ˜‘</h1>
     <%
        }
        else
        {
      %>
        
       
         <%
         result.forEach((item,index)=>
         {
         %>
     
    <div class="col" id="se1">
      
      <div class="card h-100 shadow doctor-card-new text-center">
        <div class="card-body d-flex flex-column align-items-center p-4">
          <div class="doctor-avatar mb-3">
            <img src="<%=item.rec_Image%>" alt="mr.Mak" class="img-fluid"/>
          </div>
          <h5 class="fw-bold text-dark mb-1"><%=item.reception_name%></h5>
          <p class="mb-1"><i class="fas fa-phone me-1 text-primary"></i> +91 <%=item.reception_contact%></p>
          
          <p class="mb-3"><i class="fas fa-envelope me-1 text-warning"></i><%=item.reception_email%></p>
    
        </div>
        <div class="card-footer bg-white d-flex justify-content-center gap-2">
          <a href="/recepupdate?rid=<%=item.rid%>" class="btn btn-outline-primary btn-sm px-3"><i class="fas fa-pen me-1"></i>Edit</a>
          <a href="/recepdelete?rid=<%=item.uid%>" class="btn btn-outline-danger btn-sm px-3"><i class="fas fa-trash me-1"></i>Delete</a>
        </div>
      </div>

    </div>
  <%
  });
  %>
  <%}%>
  
   
<!-- Repeat cards as needed -->
      </div>
    </div>
  </div>

</div> <!-- This closes the .main-content opened inside admindashbord -->
</body>
</html>

